<table class="table table-bordered table-responsive table-hover">
    <tr>
        <th>IP </th>
        <th>Mac Address </th>
        <th>Modelo </th>
        <th>Version de Software </th>
        <th>Acciones </th>
    </tr>
    @foreach (var cablemodem in ViewBag.Cablemodems)
    {
        <tr>
            <td>@cablemodem.Ip</td>
            <td>@cablemodem.MacAddress</td>
            <td>@cablemodem.Modelo</td>
            <td>@cablemodem.VersionSoftware</td>
            <td>
                <form asp-controller="Web.Controllers.MVC" asp-action="NoVerificadoFabricante" method="post">
                    <div style="display: none;">
                        <input name="fabricante" id="fabricante" value="@ViewBag.Fabricante" />
                        <input name="modelo" id="modelo" value="@cablemodem.Modelo" />
                        <input name="versionSoftware" id="versionSoftware" value="@cablemodem.VersionSoftware" />
                    </div>
                    <button type="submit" asp-route="AgregarModelo">Registrar +</button>
                </form>
            </td>
        </tr>
    }
</table>